---
import "../styles/global.css";

const { title, subtitle, symbol } = Astro.props;
const currentPath = Astro.url.pathname;

const base = import.meta.env.BASE_URL;

const navLinks = [
    { href: `${base}`, label: "HOME" },
    { href: `${base}/new-testament/`, label: "NEW TEST." },
    { href: `${base}/old-testament/`, label: "OLD TEST." },
    { href: `${base}/lilith/`, label: "LILITH" },
    { href: `${base}/demonology/`, label: "DEMONS" },
    { href: `${base}/symbolism/`, label: "SYMBOLS & ARTIFACTS" },
    { href: `${base}/lexicon/`, label: "LEXICON" },
];
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title} | Silent Hill Biblical Themes</title>
    </head>
    <body>
        <nav>
            <ul>
                {
                    navLinks.map((link) => (
                        <li>
                            <a
                                href={link.href}
                                class={
                                    currentPath === link.href ? "active" : ""
                                }
                            >
                                {link.label}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </nav>

        {
            title !== "Silent Hill" && (
                <header>
                    <div class="symbol">{symbol}</div>
                    <h1>{title}</h1>
                    <div class="subtitle">{subtitle}</div>
                </header>
            )
        }

        <div class="container">
            <main>
                <slot />
            </main>
        </div>

        <footer>
            <div class="motto">☩ IN STERQUILINIIS INVENITUR ☩</div>
            <div class="translation">"In the dirt, it will be found"</div>
        </footer>
    </body>
</html>
